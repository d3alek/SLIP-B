<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />
     <Button
     android:id="@+id/enable_button"
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
     android:layout_below="@id/hello"
     android:text="@string/enable_bluetooth" />
     <Button
     android:id="@+id/disable_button"
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
     android:layout_below="@id/enable_button"
     android:text="@string/disable_bluetooth" />
     <Button
     android:id="@+id/search_devices_button"
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
     android:layout_below="@id/disable_button"
     android:text="@string/search_devices" />
     <Button
     android:id="@+id/invite_people_button"
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
     android:layout_below="@id/search_devices_button"
     android:text="@string/invite_people" />

</RelativeLayout>
